{
	"name": "emacs-mark-mode",
	"displayName": "Emacs Mark Mode",
	"description": "Emacs Extensions for VS Code",
	"version": "0.0.1",
	"publisher": "csullivan",
	"repository": "https://github.com/csullivan/emacs-vscode-extension",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:emacsMarkMode.toggle",
		"onCommand:emacsMarkMode.removeMark",
		"onCommand:emacsMarkMode.cutSelection",
		"onCommand:emacsMarkMode.customUndo",
		"onCommand:emacsMarkMode.customRedo",
		"onCommand:emacsMarkMode.showUndoTree",
		"onCommand:emacsMarkMode.moveDown",
		"onCommand:emacsMarkMode.moveUp",
		"onCommand:emacsMarkMode.moveLeft",
		"onCommand:emacsMarkMode.moveRight"
	],
	
	"main": "./out/emacsMarkMode.js",
	"contributes": {
		"commands": [
			{
				"command": "emacsMarkMode.toggle",
				"title": "Toggle Emacs Mark Mode"
			},
			{
				"command": "emacsMarkMode.removeMark",
				"title": "Remove the Emacs Mark Mode mark"
			},
			{
				"command": "emacsMarkMode.cutSelection",
				"title": "Cut the current Emacs Mark Mode selection"
			},
			{
			"command": "emacsMarkMode.customUndo",
			"title": "Custom Undo"
			},
			{
			"command": "emacsMarkMode.customRedo",
			"title": "Custom Redo"
			},
			{
			"command": "emacsMarkMode.showUndoTree",
			"title": "Show Undo Tree"
			},
			{
			"command": "emacsMarkMode.moveDown",
			"title": "Move Down"
			},
			{
			"command": "emacsMarkMode.moveUp",
			"title": "Move Up"
			},
			{
			"command": "emacsMarkMode.moveLeft",
			"title": "Move Left"
			},
			{
			"command": "emacsMarkMode.moveRight",
			"title": "Move Right"
			}					
		  ],
		"keybindings": [
			{
				"command": "emacsMarkMode.toggle",
				"key": "ctrl+space",
				"when": "editorTextFocus"
			},
			{
				"command": "emacsMarkMode.removeMark",
				"key": "ctrl+g",
				"when": "editorTextFocus"
			},
			{
				"command": "emacsMarkMode.cutSelection",
				"key": "ctrl+w",
				"when": "editorTextFocus"
			}						 
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^5.0.2"
	}
}
